{
  "name": "hapi-socket-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate app to get you up and running with Hapi, HTTPS, HTTP/2, Web Socket and React/Redux.",
  "main": "src/server/index.js",
  "keywords": [
    "hapi.js",
    "http2",
    "react",
    "redux",
    "webpack",
    "socket.io"
  ],
  "scripts": {
    "build:client": "webpack --progress --colors --verbose --config webpack.client.config",
    "build:client:prod": "webpack --progress --colors --verbose --config webpack.client.prod.config",
    "build:dev": "export SOCKET_URL=wss://localhost:3000 && export PROD=0 && export HOST=0.0.0.0 && rm -rf ./dist && npm run build:client && npm run build:server",
    "build:server": "webpack --progress --colors --verbose --config webpack.server.config",
    "build:watch": "webpack --progress --colors --watch --verbose",
    "build:prod": "rm -rf ./dist && npm run build:client:prod && npm run build:server",
    "dev": "npm-run-all --parallel build:watch dev:server",
    "dev:server": "NODE_NO_HTTP2=1 nodemon ./dist/server.js",
    "dev:debug": "NODE_NO_HTTP2=1 nodemon --nolazy --inspect-brk=5858 -w src --exec \"babel-node src/server/index.js --presets es2015,stage-0,react\"",
    "lint": "./node_modules/.bin/eslint src/ --fix",
    "start": "NODE_NO_HTTP2=1 node ./dist/server.js",
    "test": "mocha -c --require babel-core/register --require babel-polyfill -r jsdom-global/register --recursive",
    "test:watch": "mocha -c -w --require babel-core/register --require babel-polyfill -r jsdom-global/register --recursive",
    "test:coverage": "cross-env NODE_ENV=test nyc -x src/client/subscribers/**.js --reporter=lcov --reporter=text --reporter=html mocha --require babel-polyfill -r jsdom-global/register --compilers js:babel-register test/**/*"
  },
  "author": "Blair Garrett <blair.garrett1@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "axios-mock-adapter": "^1.10.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-istanbul": "^0.12.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "babel-watch": "^2.0.7",
    "coveralls": "^3.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "eventsource-polyfill": "^0.9.6",
    "jsdom": "11.3.0",
    "jsdom-global": "3.0.2",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "redux-mock-store": "^1.3.0",
    "sinon": "^4.1.2",
    "webpack": "^3.9.1",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-preset-env": "^1.6.1",
    "decode-html": "^2.0.0",
    "hapi": "16.2.0",
    "hapi-swagger": "^8.0.0",
    "http-status": "^1.0.1",
    "http2": "^3.3.7",
    "inert": "^4.2.1",
    "memory-cache": "^0.2.0",
    "moment": "^2.19.3",
    "nes": "^6.5.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "vision": "^4.1.1",
    "winston": "^2.4.0"
  },
  "engines": {
    "node": "8.9.1",
    "npm": "5.5.1"
  }
}
