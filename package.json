{
  "name": "hapi-socket-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate app to get you up and running with Hapi, HTTPS, HTTP/2, Web Socket and React/Redux.",
  "main": "src/server/index.js",
  "keywords": [
    "hapi.js",
    "http2",
    "react",
    "redux",
    "webpack",
    "socket.io"
  ],
  "scripts": {
    "build": "webpack --progress --colors --verbose",
    "build:watch": "webpack --progress --colors --watch --verbose",
    "dev": "npm-run-all --parallel build:watch dev:server",
    "dev:server": "NODE_NO_HTTP2=1 nodemon ./dist/server.js",
    "dev:debug": "NODE_NO_HTTP2=1 nodemon --nolazy --inspect-brk=5858 -w src --exec \"babel-node src/server/index.js --presets es2015,stage-0,react\"",
    "lint": "eslint src/ --fix",
    "start": "npm run build && NODE_NO_HTTP2=1 node ./dist/server.js",
    "test": "mocha -c --compilers js:babel-core/register --recursive",
    "test-watch": "mocha -c -w --compilers js:babel-core/register --recursive"
  },
  "author": "Blair Garrett <blair.garrett1@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "babel-watch": "^2.0.7",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.4.0",
    "eventsource-polyfill": "^0.9.6",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-preset-env": "^1.6.1",
    "bluebird": "^3.5.1",
    "decode-html": "^1.0.2",
    "hapi": "16.2.0",
    "hapi-swagger": "^8.0.0",
    "http-status": "^1.0.1",
    "http2": "^3.3.7",
    "inert": "^4.2.1",
    "memory-cache": "^0.2.0",
    "moment": "^2.19.1",
    "nes": "^6.4.3",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "sinon": "^3.3.0",
    "socket.io-client": "^2.0.4",
    "vision": "^4.1.1",
    "winston": "^2.4.0"
  },
  "engines": {
    "node": "8.9.0",
    "npm": "5.5.1"
  }
}
