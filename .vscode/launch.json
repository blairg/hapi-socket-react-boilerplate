    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "tdd",
            "--timeout",
            "999999",
            "--colors",
            "--compilers",
            "js:babel-core/register",
            "--recursive"
        ],
        "internalConsoleOptions": "openOnSessionStart"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests with Coverage",
        "program": "${workspaceFolder}/node_modules/.bin/babel-node",
        "args": [
            "${workspaceFolder}/node_modules/.bin/babel-istanbul",
            "cover",
            "--include-all-sources",
            "--colors",
            "--root",
            "./src",
            "_mocha",
            "--",
            "--recursive"
        ],
        "internalConsoleOptions": "openOnSessionStart"
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev:debug"
            ],
            "port": 5858,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/node_modules/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev with Modules",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev:debug"
            ],
            "port": 5858
        }
    ]
}